<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteTextColor"
    tools:context=".Home">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            >


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

<!--                <ImageView-->
<!--                    android:id="@+id/QRSCANNER"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="530dp"-->
<!--                    android:src="@drawable/scannnnnnnnnnn" />-->
                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="match_parent"
                    android:layout_height="450dp"
                    app:lottie_fileName="qr_code_scanner.json"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    />
            </TableRow>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="italic"
                android:gravity="center"
                android:text="Click on scan now"

                />
<Button
    android:layout_width="150dp"
    android:layout_height="match_parent"
    android:text="SCAN NOW"
    android:textColor="@color/whiteTextColor"
    android:drawableStart="@drawable/ic_qr_code"
    android:drawablePadding="10dp"
    android:paddingStart="10dp"
    android:drawableTint="@color/whiteTextColor"
    android:background="@drawable/add_to_cart_bg"


    android:layout_gravity="center"
    android:layout_marginTop="20dp"

    />
        </LinearLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="QR Scanner "
        android:gravity="left"
        android:layout_marginLeft="30dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="25dp"

        android:textAppearance="?android:attr/textAppearanceMedium"

        />
    <View
        android:layout_width="410dp"
        android:layout_height="1dp"
        android:layout_weight="3"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="55dp"
        android:background="#e2e2e2"
        />
    <View
        android:layout_width="410dp"
        android:layout_height="54dp"
        android:layout_weight="3"
        android:layout_alignParentBottom="true"
        android:background="@color/whiteTextColor"
        />
<TableLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:stretchColumns="*"
    android:layout_alignParentBottom="true"
    >
    <TableRow
        android:layout_width="0dp">
            <ImageButton
                android:id="@+id/Qrscan"
                android:layout_width="54dp"
                android:layout_height="54dp"

                android:background="@color/whiteTextColor"
                android:src="@drawable/ic_qr_code_scanner_color"
                />
        <ImageButton
            android:id="@+id/Store"
            android:layout_width="54dp"
            android:layout_height="54dp"

            android:background="@color/whiteTextColor"
            android:src="@drawable/ic_store"
            />
        <ImageButton
            android:id="@+id/Cart"
            android:layout_width="54dp"
            android:layout_height="54dp"

            android:background="@color/whiteTextColor"
            android:src="@drawable/ic_shopping_cart"
            />
        <ImageButton
            android:id="@+id/Viewmore"
            android:layout_width="54dp"
            android:layout_height="54dp"

            android:background="@color/whiteTextColor"
            android:src="@drawable/ic_view_headline"
            />
    </TableRow>
</TableLayout>

